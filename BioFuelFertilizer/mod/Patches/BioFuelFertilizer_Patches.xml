<?xml version="1.0" encoding="utf-8"?>

<Patch>
    
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Furniture Expanded - Farming</li>
        </mods>
        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[thingClass="VFEF.Building_PlantGrower_NoEmptyLines"]/thingClass</xpath>
            <value>
                <thingClass>Building_PlantGrower</thingClass>
            </value>
        </match>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[thingClass="Building_PlantGrower"]/comps</xpath>
        <order>Append</order>
        <value>
            <li Class="Ordo.BioFuelFertilizer.CompProperties_RefuelableRareTicking">
                <fuelFilter>
                    <thingDefs>
                        <li>VRecyclingE_ReclaimedBiopack</li>
                    </thingDefs>
                </fuelFilter>
                <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
            </li>
        </value>
    </Operation>

</Patch>