<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation Class="PatchOperationReplace">
		<success>Always</success>
		<xpath>Defs/ThingDef[comps/li[@Class = "CompProperties_OverseerSubject"]]/comps/li[@Class = "MU.CompProperties_UpgradableMechanoid"]</xpath>
		<value>
			<li Class="MechUi.CompProperties_CompUpgradableMechWithPolicy"/>
		</value>
	</Operation>

	<Operation Class="PatchOperationInsert">
		<xpath>Defs/PawnTableDef[defName="Mechs"]/columns/li[text()="AutoRepair"]</xpath>
		<order>Append</order>
		<value>
			<li>MechUi_UpgradePolicy</li>
			<li>MechUi_Upgrades</li>
			<li>MechUi_Work</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationInsert">
		<xpath>Defs/ThinkTreeDef[defName="Mechanoid"]/thinkRoot/subNodes/li[@Class="ThinkNode_ConditionalPlayerControlledMech"]/subNodes/li[@Class="ThinkNode_ConditionalNotFormingCaravan"]/subNodes/li[@Class ="ThinkNode_ConditionalRecharging"]</xpath>
		<order>Append</order>
		<value>
			<li Class="MechUi.JobGiver_OptimizeUpgrades"/>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="MU_MechUpgrader"]/thingClass</xpath>
		<value>
			<thingClass>MechUi.Building_AutoMechUpgrader</thingClass>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="MU_MechUpgrader"]/label</xpath>
		<value>
			<label>Auto mech upgrader</label>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="VFE_PlanterBox"]/comps</xpath>
		<order>Append</order>
		<value>
			<li Class="MechUi.CompProperties_RefuelableRareTicking">
				<fuelConsumptionRate>1</fuelConsumptionRate>
				<fuelCapacity>10</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>VRecyclingE_ReclaimedBiopack</li>
					</thingDefs>
				</fuelFilter>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
				<showFuelGizmo>true</showFuelGizmo>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="HydroponicsBasin"]/comps</xpath>
		<order>Append</order>
		<value>
			<li Class="MechUi.CompProperties_RefuelableRareTicking">
				<fuelConsumptionRate>1</fuelConsumptionRate>
				<fuelCapacity>10</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>VRecyclingE_ReclaimedBiopack</li>
					</thingDefs>
				</fuelFilter>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
				<showFuelGizmo>true</showFuelGizmo>
			</li>
		</value>
	</Operation>
	
</Patch>